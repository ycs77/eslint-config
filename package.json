{
  "name": "@ycs77/eslint-config",
  "type": "module",
  "version": "2.0.0",
  "description": "Lucas Yang's ESLint config",
  "author": "Lucas Yang <yangchenshin77@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/ycs77/eslint-config",
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --clean --dts",
    "stub": "tsup src/index.ts --format esm",
    "dev": "run-p dev:*",
    "dev:watch": "tsup src/index.ts --format esm,cjs --watch",
    "dev:config-viewer": "eslint-flat-config-viewer",
    "typecheck": "tsc --noEmit",
    "lint": "npm run stub && eslint .",
    "test": "vitest",
    "prepack": "npm run build",
    "release": "bumpp --commit \"Release v%s\" && npm publish"
  },
  "peerDependencies": {
    "eslint": ">=8.40.0"
  },
  "dependencies": {
    "@antfu/eslint-config": "^2.1.0",
    "eslint-plugin-antfu": "^1.0.11",
    "local-pkg": "^0.5.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.44.6",
    "@types/fs-extra": "^11.0.3",
    "@types/node": "^18.0.0",
    "bumpp": "^9.2.0",
    "eslint": "^8.52.0",
    "eslint-flat-config-viewer": "^0.1.0",
    "eslint-plugin-vue": "^9.18.1",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.1",
    "fs-extra": "^11.1.1",
    "npm-run-all2": "^6.1.1",
    "tsup": "^7.3.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
