{
  "name": "@ycs77/eslint-config",
  "type": "module",
  "version": "4.0.0",
  "description": "Lucas Yang's ESLint config",
  "author": "Lucas Yang <yangchenshin77@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/ycs77/eslint-config",
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run typegen && tsup --clean --dts",
    "stub": "tsup",
    "dev": "run-p dev:*",
    "dev:watch": "tsup --watch",
    "dev:inspector": "eslint-config-inspector --no-open",
    "build:inspector": "eslint-config-inspector build",
    "lint": "eslint .",
    "typegen": "tsx scripts/typegen.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "prepack": "npm run build",
    "release": "bumpp --commit \"Release v%s\" && npm publish"
  },
  "peerDependencies": {
    "eslint": ">=9.5.0"
  },
  "dependencies": {
    "@antfu/eslint-config": "~4.4.0",
    "eslint-plugin-antfu": "^3.1.0",
    "local-pkg": "^1.1.0"
  },
  "devDependencies": {
    "@eslint/config-inspector": "^1.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.0.0",
    "bumpp": "^10.0.3",
    "eslint": "^9.21.0",
    "eslint-flat-config-utils": "^2.0.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-vue": "^9.32.0",
    "execa": "^9.5.2",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "npm-run-all2": "^7.0.2",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "~5.7.3",
    "vitest": "^3.0.7",
    "vue": "^3.5.13"
  }
}
