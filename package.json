{
  "name": "@ycs77/eslint-config",
  "type": "module",
  "version": "3.2.0",
  "description": "Lucas Yang's ESLint config",
  "author": "Lucas Yang <yangchenshin77@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/ycs77/eslint-config",
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run typegen && tsup --format esm,cjs --clean --dts",
    "stub": "tsup --format esm",
    "dev": "run-p dev:*",
    "dev:watch": "tsup --format esm,cjs --watch",
    "dev:inspector": "eslint-config-inspector --no-open",
    "build:inspector": "eslint-config-inspector build",
    "lint": "eslint .",
    "typegen": "tsx scripts/typegen.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "prepack": "npm run build",
    "release": "bumpp --commit \"Release v%s\" && npm publish"
  },
  "peerDependencies": {
    "eslint": ">=9.5.0"
  },
  "dependencies": {
    "@antfu/eslint-config": "~3.16.0",
    "eslint-plugin-antfu": "^2.7.0",
    "local-pkg": "^1.0.0"
  },
  "devDependencies": {
    "@eslint/config-inspector": "^1.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.0.0",
    "bumpp": "^9.10.1",
    "eslint": "^9.18.0",
    "eslint-flat-config-utils": "^1.1.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-vue": "^9.32.0",
    "execa": "^9.5.2",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "npm-run-all2": "^6.2.6",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "~5.7.3",
    "vitest": "^3.0.3",
    "vue": "^3.5.13"
  }
}
